          <%= f.submit '投稿' %>
      <% end %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h1>Bookdetail</h1>
      <table>
        <tr>
          <td>ユーザー</td>
          <td><%=@book.title %></td>
          <td><%=@book.body %></td>
          <td><%= link_to "Edit",edit_book_path(@book) %></td>
            <td><%= link_to "Destroy",book_path(@book), method: :delete,data: {confirm: "Are you sure?"} %></td>


          <td>destroy</td>
        </tr>
      </table>

</div>