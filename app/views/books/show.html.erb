<div class="container px-5 px-sm-0">

  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
         <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "noimage.jpg" %>
      <table>
        </tr>
        <tr>
          <th>name</th>
          <th></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th></th>
        </tr>
      </table>

        <div class="row">
          <%= link_to "users/:id", class: "btn btn-outline-primary  btn-block btn-outline-dark" do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        </div>



      <h1>New book</h1>
      <%= form_with model:@book, local:true do |f| %>
          Title<br>
