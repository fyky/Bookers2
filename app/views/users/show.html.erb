<div class="container px-5 px-sm-0">

  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "/assets/noimage.jpg" %>
      <table>
        </tr>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th></th>
        </tr>
      </table>

        <div class="row">
          <%= link_to edit_user_path, class: "btn btn-outline-primary  btn-block btn-outline-dark" do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        </div>



      <h1>New book</h1>
      <%= form_with model:@book, local:true do |f| %>
          Title<br>
          <%= f.text_field :title %><br>
          本文<br>
          <%= f.text_area :body %>
          <br>
          <%= f.submit '投稿' %>
      <% end %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>

      <% @books.each do |book| %>
        <tr>
          <td>
            <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "/assets/noimage2.jpg" %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%=book.body %></td>
      </tr>
      <% end %>

      </table>


    </div>

  </div>

</div>