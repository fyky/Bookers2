<div class="container px-5 px-sm-0">

<%= render 'users/info', user: @user %>

      <h1>New book</h1>
      <%= form_with model:@book, local:true do |f| %>
          Title<br>
          <%= f.text_field :title %><br>
          本文<br>
          <%= f.text_area :body %>
          <br>
          <%= f.submit '投稿' %>
      <% end %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th></th>
        </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag @image, :profile_image, :fill, 30, 30, fallback: "/assets/noimage2.jpeg" %></td>
          <td><%=user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
      <% end %>

      </table>


    </div>

  </div>

</div>